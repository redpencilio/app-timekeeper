{
  "version": "0.1",
  "prefixes": {
    "ext": "http://mu.semte.ch/vocabularies/ext/",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "mu": "http://mu.semte.ch/vocabularies/core/",
    "xsd": "http://www.w3.org/2001/XMLSchema#",
    "doap": "http://usefulinc.com/ns/doap#",
    "prov": "http://www.w3.org/ns/prov#",
    "time": "http://www.w3.org/2006/time#",
    "dct": "http://purl.org/dc/terms/",
    "schema": "http://schema.org/",
    "foaf": "http://xmlns.com/foaf/0.1/",
    "ui": "http://www.w3.org/ns/ui#"
  },
  "resources": {
    "customers": {
      "name": "customer",
      "class": "foaf:Organization",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "rdfs:label"
        },
        "color": {
          "type": "string",
          "predicate": "ui:color"
        }
      },
      "new-resource-base": "http://redpencil.io/timekeeper/customers/"
    },
    "projects": {
      "name": "project",
      "class": "doap:Project",
      "attributes": {
        "name": {
          "type": "string",
          "predicate": "rdfs:label"
        },
        "color": {
          "type": "string",
          "predicate": "ui:color"
        }
      },
      "relationships": {
        "customer": {
          "predicate": "schema:customer",
          "target": "customer",
          "cardinality": "one"
        },
        "sub-projects": {
          "target": "sub-project",
          "predicate": "dct:isPartOf",
          "cardinality": "many",
          "inverse": true
        }
      },
      "new-resource-base": "http://redpencil.io/timekeeper/projects/"
    },
    "sub-projects": {
      "name": "sub-project",
      "class": "ext:SubProject",
      "attributes": {
        "name": {
          "predicate": "rdfs:label",
          "type": "string"
        }
      },
      "relationships": {
        "work-logs": {
          "predicate": "dct:subject",
          "inverse": true,
          "target": "work-log",
          "cardinality": "many"
        },
        "parent": {
          "predicate": "dct:isPartOf",
          "target": "project",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://redpencil.io/timekeeper/sub-projects"
    },
    "work-logs": {
      "name": "work-log",
      "class": "ext:WorkLog",
      "attributes": {
        "duration": {
          "type": "string",
          "predicate": "schema:duration"
        },
        "date": {
          "type": "date",
          "predicate": "dct:date"
        }
      },
      "relationships": {
        "sub-project": {
          "predicate": "dct:subject",
          "target": "sub-project",
          "cardinality": "one"
        },
        "worker": {
          "predicate": "prov:wasAssociatedWith",
          "target": "person",
          "cardinality": "one"
        }
      },
      "new-resource-base": "http://redpencil.io/timekeeper/work-logs/"
    }
  }
}
